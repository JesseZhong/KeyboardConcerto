<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="clr-namespace:KeyboardConcerto"
    xmlns:local="clr-namespace:WpfAutoGrid"
	x:Class="KeyboardConcerto.MacrosWindow"
	x:Name="Window"
	Title="Macros"
    Style="{DynamicResource OpticWindow}"
	Width="840" Height="480">
	<Window.Resources>
		<Thickness x:Key="CellPadding">10</Thickness>
	</Window.Resources>
	<local:AutoGrid x:Name="WindowContentArea" RowCount="1" RowHeight="*" Columns="100,*" Orientation="Horizontal" Margin="{StaticResource CellPadding}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <ListBox x:Name="listBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		<TabControl x:Name="OptionsTabs" Width="Auto" Height="Auto">
			<TabItem Header="Keys">
				<app:OnScreenKeyboard x:Name="TestKeyboard" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
			</TabItem>
			<TabItem Header="Text">
				
			</TabItem>
		</TabControl>
    </local:AutoGrid>
</Window>