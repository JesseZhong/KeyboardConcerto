<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="KeyboardConcerto.MainWindow"
                              AllowsTransparency="True" 
                              Title="MainWindow"  
                              Width="280"
                              Height="400" WindowStyle="None" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="Black"/>
    </Window.Background>
	<Border BorderBrush="#55000000" 
		BorderThickness="0,1" 
		CornerRadius="1">
		<DockPanel Background="#1A000000">
			<Border Margin="0,0"
				RenderTransformOrigin="0.5,0.5" Height="46.6" VerticalAlignment="Top"
				MouseMove="Header_MouseMove"
				DockPanel.Dock="Top">
				<Border.Background>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="Black" Offset="0"/>
						<GradientStop Color="#FF1A1A1A" Offset="1"/>
						<GradientStop Color="#FF020202" Offset="0.349"/>
					</LinearGradientBrush>
				</Border.Background>
				<Border x:Name="WindowButtonsPlaceholder" 
					HorizontalAlignment="Right" 
					VerticalAlignment="Top" 
					Margin="0,-1,0,0" />
			</Border>
		</DockPanel>
	</Border>
</Window>
